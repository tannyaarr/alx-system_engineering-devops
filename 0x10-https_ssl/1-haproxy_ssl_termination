global
    log /dev/log local0
    log /dev/log local1 notice
    chroot /var/lib/haproxy
    stats socket /run/haproxy/admin.sock mode 660 level admin expose-fd listeners
    tune.ssl.default-dh-param 2048
    stats timeout 30s
    user haproxy
    group haproxy
    daemon

defaults
    log global
    mode http
    option httplog
    option dontlognull
    timeout connect 5000
    timeout client 50000
    timeout server 50000

frontend www-frontend
    bind *:443 ssl crt /etc/letsencrypt/live/www.teechistudio.tech.pem
    http-request add-header X-Forwarded-Proto https
    acl is_holberton hdr_end(host) -i www.teechistudio.tech
    use_backend holberton_backend if is_holberton

backend holberton_backend
    mode http
    balance roundrobin
    server 254410-web-01 100.25.179.193:80 check
    server 254410-web-02 54.174.161.74:80 check
