#!/usr/bin/env bash
# Configures domain zone so that the subdomain www points to my load-balancer IP

if [ $# -lt 1 ]; then
    echo "Usage: $0 <domain> [subdomain]"
    exit 1
fi

domain="$1"
subdomain="$2"

get_subdomain_info() {
    local sub="$1"
    local record_type=$(dig +short "$sub.$domain" | awk '{print $4}')
    local destination=$(dig +short "$sub.$domain" | awk '{print $1}')
    echo "The subdomain $sub is a $record_type record and points to $destination."
}

if [ -z "$subdomain" ]; then
    get_subdomain_info "www"
    get_subdomain_info "lb-01"
    get_subdomain_info "web-01"
    get_subdomain_info "web-02"
else
    get_subdomain_info "$subdomain"
fi
